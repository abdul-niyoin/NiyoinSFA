<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <RadioButton android:buttonTint="@color/bluegray_800"
        android:ellipsize="end"
        android:fontFamily="@font/ibm_plex_sans"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2pxv"
        android:id="@+id/radio_option"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="@string/lbl_working"
        android:textColor="@color/bluegray_800"
        android:textFontWeight="400"
        android:textSize="@dimen/_14pxh"
        android:textStyle="bold" tools:text="@string/lbl_working"/>
    </RadioGroup>
</LinearLayout>