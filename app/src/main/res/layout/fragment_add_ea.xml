<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".view.fragments.AddEaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout android:gravity="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_16pxh"
            android:padding="@dimen/_10pxh"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="vertical">
            <TextView android:ellipsize="end" android:id="@+id/txtInbox"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_6pxh"
                android:singleLine="true"
                android:text="@string/lbl_select_tp_date"
                style="@style/txtDMSansbold18" tools:text="@string/lbl_select_tp_date"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_3pxh"
                android:layout_marginTop="@dimen/_10pxv"
                app:cardCornerRadius="@dimen/_20pxh"
                >

            <LinearLayout android:id="@+id/linearRowdate"
                android:layout_height="wrap_content"

                android:layout_width="match_parent"
                android:orientation="horizontal" style="@style/groupStylewhite_A700cornerRadius">
                <TextView android:ellipsize="end"
                    android:id="@+id/selected_tp_view"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:layout_marginStart="@dimen/_22pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_weight="0.78"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@string/lbl_11_08_2023"
                    style="@style/txtDMSansmedium14" tools:text="@string/lbl_11_08_2023"/>
                <ImageView android:id="@+id/date_calendar"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginBottom="@dimen/_11pxv"
                    android:layout_marginEnd="@dimen/_28pxh"
                    android:layout_marginStart="@dimen/_172pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_width="@dimen/_20pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_calendar_2"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_calendar_2"/>
            </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView android:ellipsize="end"
                android:id="@+id/txtInboxOne"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_2pxh"
                android:layout_marginTop="@dimen/_11pxv"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_5pxh"
                android:singleLine="true"
                android:text="@string/lbl_select_activity"
                style="@style/txtDMSansbold12" tools:text="@string/lbl_select_activity"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_3pxh"
                android:layout_marginTop="@dimen/_6pxv"
                app:cardCornerRadius="@dimen/_20pxh"

                >
            <LinearLayout android:id="@+id/linearRowmeeting"
                android:layout_height="wrap_content"

                android:layout_width="match_parent"
                android:orientation="horizontal" style="@style/groupStylewhite_A700cornerRadius">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtMeeting"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:layout_marginStart="@dimen/_18pxh"
                    android:layout_marginTop="@dimen/_14pxv"
                    android:layout_weight="0.79"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@string/lbl_meeting"
                    style="@style/txtDMSansmedium14_1" tools:text="@string/lbl_meeting"/>
                <ImageView android:id="@+id/imageArrowTwelve"
                    android:layout_height="@dimen/_14pxh"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginEnd="@dimen/_14pxh"
                    android:layout_marginStart="@dimen/_215pxh"
                    android:layout_marginTop="@dimen/_14pxv"
                    android:layout_width="@dimen/_14pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrow12_14x14"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_arrow12_14x14"/>
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView android:ellipsize="end"
                android:id="@+id/txtInboxTwo"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_27pxv"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_4pxh"
                android:singleLine="true"
                android:text="@string/lbl_da_type"
                style="@style/txtDMSansbold9" tools:text="@string/lbl_da_type"/>
            <RadioGroup android:id="@+id/rgRadiogrouplabel"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_4pxh"
                android:layout_width="match_parent" android:orientation="vertical">
                <RadioButton android:buttonTint="@color/bluegray_800"
                    android:ellipsize="end"
                    android:fontFamily="@font/ibm_plex_sans"
                    android:id="@+id/rbLabel"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_39pxh"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_1pxv"
                    android:paddingStart="@dimen/_10pxh"
                    android:paddingTop="@dimen/_1pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_none"
                    android:textColor="@color/bluegray_800"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_14pxh"
                    android:textStyle="bold" tools:text="@string/lbl_none"/>
                <RadioButton android:buttonTint="@color/bluegray_800"
                    android:ellipsize="end"
                    android:fontFamily="@font/ibm_plex_sans"
                    android:id="@+id/rbLabelOne"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_39pxh"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_1pxv"
                    android:paddingStart="@dimen/_10pxh"
                    android:paddingTop="@dimen/_1pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_local"
                    android:textColor="@color/bluegray_800"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_14pxh"
                    android:textStyle="bold" tools:text="@string/lbl_local"/>
                <RadioButton android:buttonTint="@color/bluegray_800"
                    android:ellipsize="end"
                    android:fontFamily="@font/ibm_plex_sans"
                    android:id="@+id/rbLabelTwo"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_23pxh"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="wrap_content"
                    android:paddingStart="@dimen/_10pxh"
                    android:paddingTop="@dimen/_1pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_ex_city"
                    android:textColor="@color/bluegray_800"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_14pxh"
                    android:textStyle="bold" tools:text="@string/lbl_ex_city"/>
                <RadioButton android:buttonTint="@color/bluegray_800"
                    android:ellipsize="end"
                    android:fontFamily="@font/ibm_plex_sans"
                    android:id="@+id/rbLabelThree"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_1pxv"
                    android:paddingStart="@dimen/_10pxh"
                    android:paddingTop="@dimen/_1pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_out_station"
                    android:textColor="@color/bluegray_800"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_14pxh"
                    android:textStyle="bold" tools:text="@string/lbl_out_station"/>

                <RadioButton android:buttonTint="@color/bluegray_800"
                    android:ellipsize="end"
                    android:fontFamily="@font/ibm_plex_sans"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/_1pxv"
                    android:paddingStart="@dimen/_10pxh"
                    android:paddingTop="@dimen/_1pxv"
                    android:singleLine="true"
                    android:text="Transit"
                    android:textColor="@color/bluegray_800"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_14pxh"
                    android:textStyle="bold" tools:text="Transit"/>
            </RadioGroup>
            <TextView android:ellipsize="end"
                android:id="@+id/txtInboxThree"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_21pxv"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_4pxh"
                android:singleLine="true"
                android:text="@string/lbl_other_activity"
                style="@style/txtDMSansbold9" tools:text="@string/lbl_other_activity"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_3pxh"
                android:layout_marginTop="@dimen/_26pxv"
                app:cardCornerRadius="@dimen/_20pxh"
                app:cardElevation="@dimen/_5pxh"
                >
            <EditText
                android:ellipsize="end"
                android:hint="@string/lbl_distance"
                android:id="@+id/etGroupEightyOne"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_11pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_22pxh"
                android:paddingTop="@dimen/_11pxv"
                android:singleLine="true"
                android:textColorHint="@color/bluegray_100"
                style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>
            </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_20pxh"
                    android:layout_marginTop="@dimen/_16pxh"
                    app:cardElevation="@dimen/_5pxh"
                    >
                <EditText
                    android:ellipsize="end"
                    android:hint="@string/msg_details_area_n"
                    android:id="@+id/etGroupFortySix"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_11pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_22pxh"
                    android:paddingTop="@dimen/_11pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/bluegray_100"
                    style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_21pxv"
                    app:cardCornerRadius="@dimen/_20pxh"
                    app:cardElevation="@dimen/_5pxh"
                    >
                <EditText
                   android:ellipsize="end"
                    android:hint="@string/lbl_details"
                    android:id="@+id/etGroupEightyOneOne"
                    android:inputType="text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_11pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_22pxh"
                    android:paddingTop="@dimen/_11pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/bluegray_100"
                    style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>
                </androidx.cardview.widget.CardView>

            <LinearLayout android:gravity="end"
                android:id="@+id/linearButton"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_7pxh"
                android:layout_marginStart="@dimen/_6pxh"
                android:layout_marginTop="@dimen/_35pxv"
                android:layout_width="match_parent"
                android:orientation="horizontal" style="@style/groupStylelight_green_400cornerRadius">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtText"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginStart="@dimen/_127pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_5pxh"
                    android:singleLine="true"
                    android:text="@string/lbl_submit"
                    android:textAllCaps="true"
                    style="@style/txtDMSansbold14_1" tools:text="@string/lbl_submit"/>
                <ImageView android:id="@+id/imageArrowright"
                    android:layout_height="@dimen/_8pxh"
                    android:layout_marginBottom="@dimen/_17pxv"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_86pxh"
                    android:layout_marginTop="@dimen/_17pxv"
                    android:layout_width="@dimen/_22pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrowright"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_arrowright"/>
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>