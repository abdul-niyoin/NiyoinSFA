<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set your focused background color -->
            <stroke android:width="2dp" android:color="@color/primary" /> <!-- Set your focused border color and width -->
            <corners android:radius="8dp" /> <!-- Set your desired corner radius -->
            <padding
                android:left="8dp"
                android:right="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray2" /> <!-- Set your default background color -->
<!--            <corners android:radius="8dp" /> &lt;!&ndash; Set your desired corner radius &ndash;&gt;-->
            <padding
                android:left="8dp"
                android:right="8dp" />
        </shape>
    </item>
</selector>